
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v2 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->

    <link rel="stylesheet" href="~/Content/register/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->

    <link rel="stylesheet" href="~/Content/register/css/style.css">
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <form action="/Home/registerpage" method="post">
                <h3>Registration Form</h3>
                <div class="form-group">
                    <div class="form-wrapper">
                        <label for="">First Name</label>
                        <input type="text" class="form-control" name="ffname">
                    </div>
                    <div class="form-wrapper">
                        <label for="">Last Name</label>
                        <input type="text" class="form-control" name="llname">
                    </div>
                </div>
                <div class="form-wrapper">
                    <label for="">Email</label>
                    <input type="text" class="form-control" name="Eemail">
                </div>

                <div class="gender">
                    <input type="radio" id="html" name="fav_language" value="Male">
                    <label for="html">Men</label>
                    <input type="radio" id="css" name="fav_language" value="Female">
                    <label for="css">Women</label>
                </div>
                <div class="form-wrapper">
                    <label for="">Password</label>
                    <input type="password" class="form-control" name="pass">
                </div>
                <div class="form-wrapper">
                    <label for="">Confirm Password</label>
                    <input type="password" class="form-control" name="conpass">
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> I accept the Terms of Use & Privacy Policy.
                        <span class="checkmark"></span>
                    </label>
                </div>
                <button class="btn-start" type="submit">Register Now</button>
            </form>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
$(document).ready(function(){
  $(document).ajaxSuccess(function(){
    alert("AJAX request successfully completed");
  });
  $("button").click(function(){
      alert("data successfully save");
  });
});
    </script>
</body>

</html>
